    <!--  Splash Screen  -->
    <Style x:Key="TextPending" TargetType="{x:Type Control}">
        <Setter Property="Width" Value="101" />
        <Setter Property="Height" Value="10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Control}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="SlideAnimation" RepeatBehavior="Forever">
                            <PointAnimationUsingKeyFrames Storyboard.TargetName="TextRect" Storyboard.TargetProperty="(Shape.Fill).(LinearGradientBrush.EndPoint)">
                                <EasingPointKeyFrame KeyTime="00:00:00" Value="0,0.5" />
                                <EasingPointKeyFrame KeyTime="00:00:01.5" Value="2,0.5" />
                            </PointAnimationUsingKeyFrames>
                            <PointAnimationUsingKeyFrames Storyboard.TargetName="TextRect" Storyboard.TargetProperty="(Shape.Fill).(LinearGradientBrush.StartPoint)">
                                <EasingPointKeyFrame KeyTime="00:00:00" Value="-1,0.5" />
                                <EasingPointKeyFrame KeyTime="00:00:01.5" Value="1,0.5" />
                            </PointAnimationUsingKeyFrames>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Rectangle x:Name="TextRect"
                               RadiusX="4"
                               RadiusY="4"
                               Opacity="0.8">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="-1,0.5" StartPoint="0,0.5">
                                <GradientStop Color="{StaticResource DDG.Color.Grey.25}" Offset="0.20" />
                                <GradientStop Color="{StaticResource DDG.Color.White}" Offset="0.5" />
                                <GradientStop Color="{StaticResource DDG.Color.Grey.25}" Offset="0.80" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard Storyboard="{StaticResource SlideAnimation}" />
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
